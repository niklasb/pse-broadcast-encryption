<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cryptocast.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="cryptocast.client.ClientApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="cryptocast.client.OptionsActivity" android:label="@string/title_activity_options">
        </activity><activity
            android:name="cryptocast.client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cryptocast.client.KeyChoiceActivity"
            android:label="@string/title_activity_key_chooser" >
        </activity>
        <activity
            android:name="cryptocast.client.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="cryptocast.client.StreamViewerActivity"
            android:label="@string/title_activity_stream" >
        </activity>
        <activity
            android:name="cryptocast.client.MediaPlayer"
            android:label="@string/title_activity_media_player" >
        </activity>
        <activity 
            android:name="cryptocast.client.AboutActivity" 
            android:label="@string/title_activity_media_player"></activity>
    </application>

</manifest>